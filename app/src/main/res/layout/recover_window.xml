<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Forget your password ?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="                                                                      "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_empid"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="Your Employee ID"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edit_empid"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_above="@+id/txt_billVal_bill"
            android:layout_alignParentLeft="true"
            android:layout_weight="1" >
        </EditText>

        <TextView
            android:id="@+id/txt_billVal_bill"
            android:layout_width="182dp"
            android:layout_height="55dp"
            android:layout_above="@+id/lblqstn"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="Answer the question"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lblqstn"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editanswer"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="Question is"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editanswer"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_above="@+id/btn_submit"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:ems="10" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="Submit"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/lblview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editanswer"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="Enter the code which is received via SMS"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editcode"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_above="@+id/btn_submit"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:ems="10"
            />
        <Button
            android:id="@+id/btn_submit_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="Enter the code"
            />

        <TextView
            android:id="@+id/lblview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editanswer"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:textColor="@android:color/holo_green_dark"
            android:text="Enter the same code for reset your password in next window"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>


</RelativeLayout>
    </ScrollView>