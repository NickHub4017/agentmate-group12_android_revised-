<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select the vendor"
        android:id="@+id/txt_select_vendor" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/auto_select_vendor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Selected Bill is"
            android:id="@+id/txt_select_bill" />

        <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/billTable"
            android:stretchColumns="0,1,2">


        </TableLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RePrint"
            android:id="@+id/btn_reprint_bill" />
    </LinearLayout>
</ScrollView>
